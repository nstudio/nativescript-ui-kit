<Page xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:ui="@nstudio/nativescript-shimmer" navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="Shimmer" icon="" class="action-bar" flat="true">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20 c-bg-black">
    <ScrollView class="h-full">
      <StackLayout>
        <!-- <Button text="Test nativescript-shimmer" tap="{{ testIt }}" class="btn btn-primary"/> -->
        <Button text="Toggle Shimmer" tap="{{ toggleShimmer }}" class="c-white font-weight-bold text-center" fontSize="30"/>
        <ui:Shimmer loaded="{{ loadedView }}">
          <GridLayout class="p-20 text-left" rows="auto,5,auto,5,auto,5,auto">
            <ContentView horizontalAlignment="left" class="h-left text-left" height="20" width="65%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="2" height="60" width="100%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="4" height="10" width="50%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="6" height="10" width="30%" backgroundColor="#333"/>
          </GridLayout>
        </ui:Shimmer>

        <ui:Shimmer loaded="{{ loadedView2 }}">
          <GridLayout class="p-20 text-left" rows="auto,5,auto,5,auto,5,auto">
            <ContentView horizontalAlignment="left" class="h-left text-left" height="20" width="65%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="2" height="60" width="100%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="4" height="10" width="50%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="6" height="10" width="30%" backgroundColor="#333"/>
          </GridLayout>
        </ui:Shimmer>

        <ui:Shimmer loaded="{{ loadedView3 }}">
          <GridLayout class="p-20 text-left" rows="auto,5,auto,5,auto,5,auto">
            <ContentView horizontalAlignment="left" class="h-left text-left" height="20" width="65%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="2" height="60" width="100%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="4" height="10" width="50%" backgroundColor="#333"/>
            <ContentView horizontalAlignment="left" class="h-left text-left" row="6" height="10" width="30%" backgroundColor="#333"/>
          </GridLayout>
        </ui:Shimmer>

      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>